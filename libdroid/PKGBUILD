# Maintainer: Deepak Meena <notwho53@gmail.com>
pkgname=libdroid
pkgver=0.2.0
pkgrel=1
pkgdesc="Library to ease interaction with Android HALs"
arch=('aarch64')
url="https://github.com/droidian/libdroid"
license=('custom')
depends=('libgbinder')
makedepends=('meson' 'libgbinder' 'systemd' 'libgirepository' 'libgudev' 'gobject-introspection')
source=("git+$url.git")
sha256sums=('SKIP')

build() {
	arch-meson --buildtype=release "$srcdir/$pkgbase" build
	ninja -C build
}

package() {
    DESTDIR="$pkgdir" ninja -C build install
}
