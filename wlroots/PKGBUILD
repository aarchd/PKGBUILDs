# Maintainer: Deepak Meena <notwho53@gmail.com>
pkgname=wlroots
pkgver=0.17.4
pkgrel=3
license=('MIT')
pkgdesc='Modular Wayland compositor library'
url='https://gitlab.freedesktop.org/wlroots/wlroots'
arch=('aarch64')
depends=(
    'libdisplay-info.so'
    'libglvnd'
    'libinput'
    'liblcms2.so'
    'libliftoff.so'
    'libpixman-1.so'
    'libseat.so'
    'libudev.so'
    'libvulkan.so'
    'libwayland-client.so'
    'libwayland-server.so'
    'libxcb'
    'libxkbcommon.so'
    'opengl-driver'
    'xcb-util-errors'
    'xcb-util-renderutil'
    'xcb-util-wm'
    'libdroid'
    'android-headers'
    'libhybris'
)
makedepends=(
    'glslang'
    'meson'
    'ninja'
    'systemd'
    'vulkan-headers'
    'wayland-protocols'
    'xorg-xwayland'
    'android-headers'
    'libhybris'
    'libdroid'
)
optdepends=(
    'xorg-xwayland: Xwayland support'
)
provides=(
    "libwlroots-${pkgver%.*}.so"
)
source=('git+https://github.com/droidian/wlroots.git')
sha256sums=('SKIP')


build() {
    arch-meson "$srcdir/wlroots" build \
        -Dbackends=hwcomposer,drm,libinput,x11 \
        -Ddroidian-extensions=true
    ninja -C build
}

package() {
    DESTDIR="$pkgdir" ninja -C build install
}
