# Maintainer: Deepak Meena <notwho53@gmail.com>
pkgname=gst-droid
pkgver=0.20241209.0
pkgrel=1
pkgdesc="GStreamer droid plug-in."
arch=('aarch64')
url="https://github.com/sailfishos/gst-droid"
license=('custom')
makedepends=('meson' 'droidmedia' 'libexif' 'libhybris' 'nemo-gst-interfaces' 'gst-plugins-bad-libs')
source=("git+$url.git")
sha256sums=('SKIP')

build() {
	arch-meson "$srcdir/$pkgname" build
	ninja -C build
}

package() {
    DESTDIR="$pkgdir" ninja -C build install
}
